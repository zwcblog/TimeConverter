{
    "manifest_version": 3,
    "name": "Timestamp Converter Pro",
    "version": "1.1",
    "description": "A powerful timestamp converter with timezone support, date calculator, and more features.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "../assets/icons/icon16.png",
        "48": "../assets/icons/icon48.png",
        "128": "../assets/icons/icon128.png"
      }
    },
    "permissions": [
      "activeTab",
      "clipboardWrite",
      "storage"
    ]
}